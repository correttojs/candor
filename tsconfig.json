{
  "compilerOptions": {
    "types": [
      "react/next",
      "react-dom/next"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./packages/atticodellino/src/*"
      ],
      "@packages/ui/*": [
        "./packages/ui/src/*"
      ],
      "@packages/utils/*": [
        "./packages/utils/src/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}