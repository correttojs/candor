{
  "name": "monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter klimt run build",
    "build-attico": "pnpm --filter atticodellino run build",
    "codegen": "pnpm --filter klimt run codegen",
    "codegen-tsc": "pnpm run -r codegen-tsc",
    "dev": "pnpm --filter klimt run dev",
    "dev-attico": "pnpm --filter atticodellino run dev",
    "lint": "pnpm run -r lint && pnpm run -r stylelint '**/src/**/*.(s)?css' --fix",
    "start": "pnpm --filter klimt run start",
    "test": "pnpm jest"
  },
  "stylelint": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "3.2.0",
    "@packages/ui": "*",
    "@types/jest": "29.5.0",
    "@types/react": "18.0.33",
    "graphql": "16.6.0",
    "nock": "^13.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.1",
    "typescript": "5.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@graphql-codegen/cli": "3.3.0",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typed-document-node": "3.0.2",
    "@graphql-codegen/typescript": "3.0.3",
    "@graphql-codegen/typescript-operations": "3.0.3",
    "@graphql-codegen/typescript-resolvers": "3.2.0",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.15.11",
    "cosmiconfig-toml-loader": "^1.0.0",
    "eslint": "8.37.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-tailwindcss": "3.11.0",
    "eslint-plugin-testing-library": "5.10.2",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-fetch-mock": "3.0.3",
    "prettier": "2.8.7",
    "stylelint": "15.4.0"
  }
}
