{
  "name": "candor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter klimt run build",
    "build-attico": "pnpm --filter atticodellino run build",  
    "codegen": "pnpm --filter klimt run codegen",
    "codegen-tsc": "pnpm run -r codegen-tsc",
    "dev": "pnpm --filter klimt run dev",
    "dev-attico": "pnpm --filter atticodellino run dev",
    "lint": "pnpm run -r lint && pnpm run -r stylelint '**/src/**/*.(s)?css' --fix",
    "start": "pnpm --filter klimt run start", 
    "test": "pnpm jest"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-import-partial-extension": "always",
      "scss/at-import-partial-extension-whitelist": [
        "scss"
      ],
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@googlemaps/react-wrapper": "^1.1.35",
    "@graphql-typed-document-node/core": "3.1.2",
    "@graphql-yoga/node": "3.7.0",
    "@packages/ui": "*",
    "@sendgrid/mail": "7.7.0",
    "@tw-classed/react": "^1.3.1", 
    "@types/google.maps": "^3.51.0",
    "@types/react": "18.0.28",
    "@types/react-calendar": "3.9.0",
    "autoprefixer": "10.4.13",
    "css-loader": "6.7.3", 
    "graphql": "16.6.0",
    "graphql-request": "5.2.0",
    "graphql-tag": "2.12.6",
    "next": "13.2.3",
    "next-plugin-graphql": "0.0.2",
    "postcss": "8.4.21",
    "react": "18.2.0",
    "react-calendar": "4.0.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.43.4",
    "react-icons": "4.8.0",
    "react-image-lightbox": "5.1.4",
    "react-intersection-observer": "9.4.3",
    "swr": "2.0.4",
    "tailwindcss": "3.2.7",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@graphql-codegen/cli": "3.2.1",
    "@graphql-codegen/near-operation-file-preset": "2.5.0",
    "@graphql-codegen/typed-document-node": "3.0.1",
    "@graphql-codegen/typescript": "3.0.1",
    "@graphql-codegen/typescript-operations": "3.0.1",
    "@graphql-codegen/typescript-resolvers": "3.1.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "babel-loader": "9.1.2",
    "babel-preset-react-app": "10.0.1",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.3",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-postcss-modules": "2.0.0",
    "eslint-plugin-tailwindcss": "3.10.1",
    "eslint-plugin-testing-library": "5.10.2",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "jest-fetch-mock": "3.0.3",
    "node-fetch": "2.6.9",
    "prettier": "2.8.4",
    "style-loader": "3.3.1",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "7.0.1"
  }
}
