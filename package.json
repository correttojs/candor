{
  "name": "candor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter klimt run build",
    "build-attico": "pnpm --filter atticodellino run build",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=12fa87214082",
    "codegen": "pnpm --filter klimt run codegen",
    "codegen-tsc": "pnpm run -r codegen-tsc",
    "dev": "pnpm --filter klimt run dev",
    "dev-attico": "pnpm --filter atticodellino run dev",
    "lint": "pnpm run -r lint && pnpm run -r stylelint '**/src/**/*.(s)?css' --fix",
    "start": "pnpm --filter klimt run start",
    "storybook": "start-storybook -p 6006",
    "test": "pnpm jest"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-import-partial-extension": "always",
      "scss/at-import-partial-extension-whitelist": [
        "scss"
      ],
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "3.1.1",
    "@graphql-yoga/node": "3.1.1",
    "@packages/ui": "*",
    "@sendgrid/mail": "7.7.0",
    "@tw-classed/react": "^1.3.1",
    "@types/google-map-react": "2.1.7",
    "@types/react": "18.0.26",
    "@types/react-calendar": "3.9.0",
    "autoprefixer": "10.4.13",
    "chromatic": "6.12.0",
    "css-loader": "3.6.0",
    "google-map-react": "2.2.0",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "graphql-tag": "2.12.6",
    "next": "13.0.6",
    "next-plugin-graphql": "0.0.2",
    "node-sass": "8.0.0",
    "postcss": "8.4.19",
    "react": "18.2.0",
    "react-calendar": "4.0.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.40.0",
    "react-icons": "4.7.1",
    "react-image-lightbox": "5.1.4",
    "react-intersection-observer": "9.4.1",
    "sass": "1.56.2",
    "swr": "2.0.0",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/near-operation-file-preset": "2.4.4",
    "@graphql-codegen/typed-document-node": "2.3.10",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-operations": "2.5.10",
    "@graphql-codegen/typescript-resolvers": "2.7.10",
    "@storybook/addon-actions": "6.5.14",
    "@storybook/addon-essentials": "6.5.14",
    "@storybook/addon-interactions": "6.5.14",
    "@storybook/addon-links": "6.5.14",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.5.14",
    "@storybook/jest": "0.0.10",
    "@storybook/manager-webpack5": "6.5.14",
    "@storybook/react": "6.5.14",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "babel-loader": "9.1.0",
    "babel-preset-react-app": "10.0.1",
    "eslint": "8.29.0",
    "eslint-config-next": "13.0.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-postcss-modules": "2.0.0",
    "eslint-plugin-storybook": "0.6.8",
    "eslint-plugin-tailwindcss": "3.7.1",
    "eslint-plugin-testing-library": "5.9.1",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-fetch-mock": "3.0.3",
    "node-fetch": "2.6.7",
    "prettier": "2.8.1",
    "sass-loader": "13.2.0",
    "storybook-css-modules-preset": "1.1.1",
    "style-loader":"1.3.0",
    "stylelint": "14.16.0",
    "stylelint-config-standard-scss": "6.1.0"
  }
}
