{
  "name": "candor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace klimt run build",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=12fa87214082",
    "codegen": "yarn workspace klimt run codegen",
    "codegen-tsc": "yarn workspaces run codegen-tsc",
    "dev": "yarn workspace klimt run dev",
    "dev-attico": "yarn workspace atticodellino run dev",
    "lint": "yarn workspaces run lint && yarn stylelint '**/src/**/*.(s)?css' --fix",
    "start": "yarn workspace klimt run start",
    "storybook": "start-storybook -p 6006",
    "test": "yarn jest"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "include"
          ]
        }
      ],
      "scss/at-import-partial-extension": "always",
      "scss/at-import-partial-extension-whitelist": [
        "scss"
      ],
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "3.1.1",
    "@graphql-yoga/node": "2.1.0",
    "@packages/ui": "*",
    "@sendgrid/mail": "7.6.2",
    "@types/google-map-react": "2.1.5",
    "@types/react": "17.0.43",
    "@types/react-calendar": "3.5.0",
    "autoprefixer": "10.4.4",
    "chromatic": "6.5.4",
    "google-map-react": "2.1.10",
    "graphql": "16.3.0",
    "graphql-request": "4.2.0",
    "graphql-tag": "2.12.6",
    "next": "12.1.4",
    "next-plugin-graphql": "0.0.2",
    "next-transpile-modules": "9.0.0",
    "node-sass": "7.0.1",
    "postcss": "8.4.12",
    "react": "18.0.0",
    "react-calendar": "3.7.0",
    "react-dom": "18.0.0",
    "react-hook-form": "7.29.0",
    "react-icons": "4.3.1",
    "react-image-lightbox": "5.1.4",
    "react-intersection-observer": "8.34.0",
    "swr": "1.2.2",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/near-operation-file-preset": "2.2.9",
    "@graphql-codegen/typed-document-node": "2.2.8",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@storybook/addon-actions": "6.4.21",
    "@storybook/addon-essentials": "6.4.21",
    "@storybook/addon-interactions": "6.4.21",
    "@storybook/addon-links": "6.4.21",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.4.21",
    "@storybook/jest": "0.0.10",
    "@storybook/manager-webpack5": "6.4.21",
    "@storybook/react": "6.4.21",
    "@storybook/testing-library": "0.0.9",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.0.1",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "14.1.0",
    "babel-loader": "8.2.4",
    "babel-preset-react-app": "10.0.1",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-storybook": "0.5.8",
    "eslint-plugin-tailwindcss": "3.5.0",
    "eslint-plugin-testing-library": "5.3.1",
    "jest": "27.5.1",
    "jest-fetch-mock": "3.0.3",
    "node-fetch": "2.6.7",
    "prettier": "2.6.2",
    "sass-loader": "12.6.0",
    "storybook-css-modules-preset": "1.1.1",
    "stylelint": "14.6.1",
    "stylelint-config-standard-scss": "3.0.0"
  }
}
