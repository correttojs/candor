{
  "name": "candor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace klimt run build",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=12fa87214082",
    "codegen": "yarn workspace klimt run codegen",
    "codegen-tsc": "yarn workspaces run codegen-tsc",
    "dev": "yarn workspace klimt run dev",
    "lint": "yarn workspaces run lint",
    "start": "yarn workspace klimt run start",
    "storybook": "start-storybook -p 6006",
    "test": "yarn jest"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "scss/at-import-partial-extension": "always",
      "scss/at-import-partial-extension-whitelist": [
        "scss"
      ],
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@envelop/core": "1.6.5",
    "@graphql-tools/schema": "8.3.1",
    "@graphql-typed-document-node/core": "3.1.1",
    "@packages/ui": "*",
    "@sendgrid/mail": "7.6.0",
    "@types/google-map-react": "2.1.3",
    "@types/react": "17.0.38",
    "@types/react-calendar": "3.4.4",
    "@types/styled-components": "^5.1.19",
    "autoprefixer": "10.4.1",
    "chromatic": "6.3.3",
    "google-map-react": "2.1.10",
    "graphql": "15.8.0",
    "graphql-request": "3.7.0",
    "graphql-tag": "2.12.6",
    "next": "12.0.7",
    "next-plugin-graphql": "0.0.2",
    "next-transpile-modules": "^9.0.0",
    "node-sass": "6.0.1",
    "postcss": "8.4.5",
    "react": "17.0.2",
    "react-calendar": "3.5.0",
    "react-dom": "17.0.2",
    "react-hook-form": "7.22.5",
    "react-icons": "4.3.1",
    "react-image-lightbox": "5.1.4",
    "react-intersection-observer": "8.33.1",
    "styled-components": "5.3.0",
    "swr": "1.1.2",
    "tailwindcss": "3.0.8",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/near-operation-file-preset": "^2.2.3",
    "@graphql-codegen/typed-document-node": "2.2.2",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@storybook/addon-actions": "6.4.9",
    "@storybook/addon-essentials": "6.4.9",
    "@storybook/addon-links": "6.4.9",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.4.9",
    "@storybook/manager-webpack5": "6.4.9",
    "@storybook/react": "6.4.9",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "13.5.0",
    "babel-jest": "27.4.5",
    "babel-loader": "8.2.3",
    "babel-plugin-styled-components": "1.13.2",
    "babel-preset-react-app": "10.0.1",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-storybook": "0.5.5",
    "eslint-plugin-tailwindcss": "3.0.2",
    "eslint-plugin-testing-library": "5.0.1",
    "jest": "27.4.5",
    "jest-fetch-mock": "3.0.3",
    "jest-transform-graphql": "2.1.0",
    "node-fetch": "^3.1.0",
    "prettier": "2.5.1",
    "stylelint": "14.2.0",
    "stylelint-config-standard-scss": "3.0.0"
  }
}
