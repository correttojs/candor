{
  "extends": ["config:base"],
  "labels": ["renovate"],
  "ignorePaths": ["packages/checkly-tests/**"],
  "packageRules": [
    {
      "matchPackageNames": [
        "@types/node",
        "graphql",
        "node-fetch",
        "node",
        "apollo-server-micro"
      ],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": true,
      "automergeType": "pr",
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "labels": ["linting"]
    }
  ]
}
