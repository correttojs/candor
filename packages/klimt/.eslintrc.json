{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "plugin:postcss-modules/recommended",
    "prettier"
  ],
  "plugins": [
    "tailwindcss",
    "testing-library",
    "postcss-modules"
  ],  
  "settings": {
    "postcss-modules": {
      "include":["**/*.css", "**/*.css" ]
    }
  },
  "rules": {
    "tailwindcss/no-custom-classname": ["warn", {
      "whitelist": ["main", "p-header", "white-opacity", "text-shadow", "h-128"]
    }]
  }
}